<div class="row header concert-header">
  <%= image_tag('icons/icon-microphone-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-blue">
  <h3>Editing <%= @concert.title %> concert</h3>
</div>

<div class="row">
  <%= form_tag("/concerts/#{@concert.id}", method: "patch") do |f| %>
  <div class="field">
    <%= label_tag(:title, 'Memory title') %><br>
    <%= text_field(:concert, :title) %>
  </div>

  <div class="field">
    <%= label_tag(:artist, 'Artist/Band') %><br>
    <%= text_field(:concert, :artist) %>
  </div>

  <div class="field">
    <%= label_tag(:location) %><br>
    <%= text_field(:concert, :location) %>
  </div>

  <div class="field">
    <%= label_tag(:date) %><br>
    <%= date_field(:concert, :date) %><br><br>
  </div>

  <div class="field">
    <%= label_tag(:venue) %><br>
    <%= text_field(:concert, :venue) %>
  </div>

  <div class="field">
    <%= label_tag(:friends) %><br>
    <%= text_field(:concert, :friends) %>
  </div>

  <div class="field">
    <%= label_tag(:notes) %><br>
    <%= text_area(:concert, :notes) %>
  </div>

    <div class="field hidden">
      <%= label_tag(:category) %><br>
      <%= select(:category, Memory.categories.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @category != "Memory") %>
    </div>
    <div class="actions submit submit-blue">
      <%= submit_tag("Submit") %>
    </div>
  <% end %>
</div>
