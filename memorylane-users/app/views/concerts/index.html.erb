<div class="row header concert-header">
  <%= image_tag('icons/icon-microphone-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-blue">
  <h3>My concert memories</h3>
</div>

<div class="row">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Venue</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
    <tbody>
      <% @concerts.each do |concerts| %>
      <% if concerts.user_id == current_user.id %>
        <tr>
          <td><%= concerts.title %></td>
          <td><%= concerts.category %></td>
          <td><%= link_to 'Show', "/concerts/#{concerts.id}" %></td>
          <td><%= link_to 'Edit', "/concerts/#{concerts.id}/edit" %></td>
          <td><%= link_to 'Delete', "/concerts/#{concerts.id}", method: :delete, data: {confirm: 'are you sure?'} %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br><br>
  <%= link_to 'Add concert', "/concerts/new" %><br>
  <%= link_to 'All memories', "/memories" %>
</div>
