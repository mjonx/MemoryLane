<div class="row header concert-header" style="background-image: url('<%= @concert.memoryphoto.url %>'); background-size: cover; background-position: center;">
</div>

<div class="row title-bar title-bar-blue">
  <h3><%= @concert.title %></h3>
</div>

<div class="row">
  <div class="col-md-6 col-sm-12 memory-box-single">
    <%= image_tag 'ziggo.jpg' %>
    <h4>MEMORY DETAILS:</h4>
    <div class="memory-details-single">
      <table>
        <tbody>
          <tr>
            <td><i class="fa fa-music" aria-hidden="true"></i></td>
            <td><%= @concert.artist %></td>
          </tr>
          <tr>
            <td><i class="fa fa-map-marker" aria-hidden="true"></i></td>
            <td><%= @concert.location %></td>
          </tr>
          <tr>
            <td><i class="fa fa-calendar-o" aria-hidden="true"></i></td>
            <td><%= @concert.date.try(:to_formatted_s, :long) %></td>
          </tr>
          <tr>
            <td><i class="fa fa-building-o" aria-hidden="true"></i></td>
            <td><%= @concert.venue %></td>
          </tr>
          <tr>
            <td><i class="fa fa-users" aria-hidden="true"></i></td>
            <td><%= @concert.friends %></td>
          </tr>
          <tr>
            <td><i class="fa fa-pencil-square-o" aria-hidden="true"></i></td>
            <td><%= @concert.notes %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
  <div class="col-md-6 col-sm-12 memory-box-btns">
    <div class="col-md-6 col-sm-6 col-xs-6 edit-btn">
      <i class="fa fa-pencil" aria-hidden="true"></i> <%= link_to 'Edit', "/concerts/#{@concert.id}/edit" %><br>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6 delete-btn">
      <i class="fa fa-trash-o" aria-hidden="true"></i> <%= link_to 'Delete', "/concerts/#{@concert.id}", method: :delete, data: {confirm: 'are you sure?'} %><br>
    </div>
  </div>
</div>

<div class="row">
  <%= link_to 'Back to concerts', '/concerts' %><br>
  <%= link_to 'All memories', '/memories' %>
</div>
