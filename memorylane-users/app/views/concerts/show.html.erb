<div class="row header concert-header">
  <%= image_tag('icons/icon-microphone-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-blue">
  <h3><%= @concert.title %></h3>
</div>

<div class="row">
  <p>Title: <%= @concert.title %></p>
  <p>Venue: <%= @concert.venue %></p>

  <%= link_to 'Edit', "/concerts/#{@concert.id}/edit" %><br>
  <%= link_to 'Delete', "/concerts/#{@concert.id}", method: :delete, data: {confirm: 'are you sure?'} %><br>
  <%= link_to 'Back to concerts', '/concerts' %><br>
  <%= link_to 'All memories', '/memories' %>
</div>
