<div class="row header achievement-header">
  <%= image_tag('icons/icon-medal-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-pink">
  <h3>My achievements</h3>
</div>

<div class="row cards">
  <% @achievements.each do |achievement| %>
    <% if achievement.user_id == current_user.id %>
      <div class="col-lg-4 col-md-6 col-sm-12 memory-card">
        <%= image_tag('icons/pin-medal.svg', class: "memory-pin") %>
        <div class="memory-box">
          <h4><%= achievement.title.upcase %></h4>
          <p><i class="fa fa-map-marker" aria-hidden="true"></i> <%= achievement.location %></p>
          <p><i class="fa fa-trophy" aria-hidden="true"></i> <%= achievement.reward %></p>
          <p><i class="fa fa-calendar-o" aria-hidden="true"></i> <%= achievement.date.try(:to_formatted_s, :long) %></p>
          <div class="btn btn-pink">
            <%= link_to 'VIEW MEMORY', "/#{achievement.category.downcase.pluralize}/#{achievement.id}" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<div class="row">
  <%= link_to 'Add achievement', "/achievements/new" %><br>
  <%= link_to 'All memories', "/memories" %>
</div>
