<div class="row header trip-header">
  <%= image_tag('icons/icon-map-pin-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-green">
  <h3>My trips</h3>
</div>

<div class="row cards">
  <% @trips.each do |trip| %>
    <% if trip.user_id == current_user.id %>
      <div class="col-lg-4 col-md-6 col-sm-12 memory-card">
        <%= image_tag('icons/pin-map.svg', class: "memory-pin") %>
        <div class="memory-box">
          <h4><%= trip.title.upcase %></h4>
          <p><i class="fa fa-map-marker" aria-hidden="true"></i> <%= trip.location %></p>
          <p><i class="fa fa-paper-plane" aria-hidden="true"></i> <%= trip.destination %></p>
          <p><i class="fa fa-calendar-o" aria-hidden="true"></i> <%= trip.date.to_formatted_s(:long) %></p>
          <div class="btn btn-green">
            <%= link_to 'VIEW MEMORY', "/#{trip.category.downcase.pluralize}/#{trip.id}" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="row">
  <%= link_to 'Add trip', "/trips/new" %><br>
  <%= link_to 'All memories', "/memories" %>
</div>
