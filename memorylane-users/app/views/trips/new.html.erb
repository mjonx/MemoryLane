<div class="row header trip-header">
  <%= image_tag('icons/icon-map-pin-fill.svg', class: "memory-icon") %>
</div>

<div class="row title-bar title-bar-green">
  <h3>Add new trip</h3>
</div>


<div class="row">
    <%= form_tag("/trips", method: "post") do |f| %>
    <div class="field">
      <%= label_tag(:title) %><br>
      <%= text_field(:trip, :title) %><br><br>
    </div>

    <div class="field">
      <%= label_tag(:destination) %><br>
      <%= text_field(:trip, :destination) %><br><br>
    </div>

    <div class="field hidden">
      <%= label_tag(:category) %><br>
      <%= select(:category, Memory.categories.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @category != "Memory") %>
    </div>
    <div class="actions submit submit-green">
      <%= submit_tag("Submit") %>
    </div>
  <% end %>

</div>
