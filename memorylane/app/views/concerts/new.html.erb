<h1>Add new concert</h1>

<%= form_tag("/concerts", method: "post") do |f| %>
    <div class="field">
      <%= label_tag(:title) %><br>
      <%= text_field(:concert, :title) %><br><br>
    </div>

    <div class="field">
      <%= label_tag(:venue) %><br>
      <%= text_field(:concert, :venue) %><br><br>
    </div>

    <div class="field">
      <%= label_tag(:category) %><br>
      <%= select(:category, Memory.categories.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @category != "Memory") %>
    </div>
    <div class="actions">
      <%= submit_tag("Submit") %>
    </div>
  <% end %>
